<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.greentech.ansibledt.materialdemo.activity.MainActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/blue2"
                android:elevation="10dp"
                android:gravity="center"
                android:text="Activity转场动画； Authentic Motion 真实的动效" />

            <android.support.v7.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:layout_margin="20dp"
                android:transitionName="@string/transition"
                app:cardBackgroundColor="@color/blue2"
                app:cardCornerRadius="3dp"
                app:cardElevation="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="平移makeCustomAnimation"
                    android:textColor="@color/white" />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:layout_margin="20dp"
                android:transitionName="@string/transition"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="3dp"
                app:cardElevation="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="平滑放大makeScaleUpAnimation"
                    android:textColor="@color/white" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:layout_margin="20dp"
                android:transitionName="@string/transition"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="3dp"
                app:cardElevation="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="场景动画1 makeSceneTransitionAnimation"
                    android:textColor="@color/white" />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:layout_margin="20dp"
                android:transitionName="@string/transition"
                app:cardBackgroundColor="@color/blue2"
                app:cardCornerRadius="3dp"
                app:cardElevation="10dp">

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="场景动画2 makeSceneTransitionAnimation"
                    android:textColor="@color/white"
                    android:transitionName="@string/transition_name" />
            </android.support.v7.widget.CardView>


            <Button
                android:id="@+id/card5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:layout_margin="20dp"
                android:elevation="10dp"
                android:background="@drawable/ripple_bgd"
                android:text="Ripples（涟漪)"
                android:textColor="@color/white"
                android:textAllCaps="false"/>


            <Button
                android:id="@+id/card6"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:layout_margin="20dp"
                android:elevation="10dp"
                android:background="@color/blue1"
                android:text="StateListAnimator（磁铁吸引)"
                android:textColor="@color/white"
                android:translationZ="10dp"
                android:textAllCaps="false"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="16dp">

                <Button
                    android:id="@+id/btn_dialog_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="dialog1"
                    android:textAllCaps="false"
                    android:layout_margin="10dp"
                    android:background="@color/blue2"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btn_dialog_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="dialog2"
                    android:textAllCaps="false"
                    android:layout_margin="10dp"
                    android:background="@color/blue2"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btn_dialog_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="dialog3"
                    android:textAllCaps="false"
                    android:layout_margin="10dp"
                    android:background="@color/blue2"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
